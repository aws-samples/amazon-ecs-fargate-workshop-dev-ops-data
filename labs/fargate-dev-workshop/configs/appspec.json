{
  "version": 0.0,
  "Resources": [
    {
      "TargetService": {
        "Type": "AWS::ECS::Service",
        "Properties": {
          "TaskDefinition": "<TASK_DEFINITION>",
          "LoadBalancerInfo": {
            "ContainerName": "fargate_task_container",
            "ContainerPort": 80
          },
          "PlatformVersion": "LATEST",
          "NetworkConfiguration": {
            "awsvpcConfiguration": {
              "subnets": [
                "PLACEHOLDER_SUBNET"
              ],
              "securityGroups": [
                "PLACEHOLDER_SECURITY_GROUP"
              ],
              "assignPublicIp": "DISABLED"
            }
          }
        }
      }
    }
  ]
}